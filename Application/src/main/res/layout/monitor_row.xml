<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/alarm_row_height"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium" >

    <ImageView
        android:id="@+id/image_show_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_centerVertical="true"
        android:src="@drawable/bot_24dp"
        />

    <TextView
        android:id="@+id/text_alarm_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_show_alarm"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_centerVertical="true"
        android:layout_alignBaseline="@id/image_show_alarm"
        android:textSize="20sp"
        android:freezesText="true"
        />

    <TextView
        android:id="@+id/text_alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_alarm_type"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_alignBaseline="@id/text_alarm_type"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/text_alarm_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_alarm_time"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_alignBaseline="@id/text_alarm_time"
        android:layout_marginEnd="@dimen/margin_medium"
        android:textSize="20sp"
        />


    <ImageView
        android:id="@+id/image_delete_alarm"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/text_alarm_date"
        android:src="@drawable/ic_delete_black_24dp"
        />
</RelativeLayout>
